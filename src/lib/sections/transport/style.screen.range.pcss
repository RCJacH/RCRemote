#transport-screen-range {
  position: absolute;
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  bottom: 5%;
  left: 0;
  right: 0;
  overflow: hidden;

  & .cursor {
    position: relative;
    width: 4%;
    left: 48%;
    height: 40%;
    fill: var(--color-play-button);
  }
}
