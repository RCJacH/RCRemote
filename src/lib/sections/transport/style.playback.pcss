#transport-playback {
  display: flex;
  flex-wrap: wrap;
  flex: 6;
  justify-content: stretch;
  align-items: stretch;
  background: linear-gradient(
    to top,
    var(--color-button_light-bg) 95%,
    var(--color-button_dark-bg) 120%
  );

  & .c-button {
    flex-basis: 50%;
    height: 50%;
    & button {
      $size: 80%;

      width: $size;
      height: $size;
    }
  }

  @media screen and (orientation: landscape) {
    & .c-button {
      flex-basis: 25%;
    }
    flex: 5;
  }
}
